<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team 1 Score: 0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/secondTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team 2 Score: 0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="240dp"
        android:layout_height="360dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716"
        app:rowCount="3"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/BTNT1P1"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingBottom="10dp"
            android:text="1 POINT"
            android:textColor="@android:color/black"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/BTNT1P2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="2 POINT"
            android:textColor="@android:color/black"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/BTNT1P3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingTop="10dp"
            android:text="3 POINT"
            android:textColor="@android:color/black"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/BTNT2P1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_red_dark"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="1 POINT"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/BTNT2P2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_red_dark"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="2 POINT"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/BTNT2P3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_red_dark"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="3 POINT"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>